

<div class="page-header">
  <h1>My Account</h1>
</div>

<table class="table">
  <tbody>
    <tr>
      <td>Name</td>
      <td><%= current_user.full_name %></td>
    </tr>
    <tr>
      <td>Phone Number</td>
      <td><%= current_user.address.phone_number %></td>
    </tr>
    <tr>
      <td>Website URL</td>
      <td><%= current_user.website_url %></td>
    </tr>
    <tr>
      <td>Address</td>
      <td>
        <%= render 'address', address: current_user.address %>
      </td>
    </tr>
  </tbody>
</table>

