

<div class="container">
  <div class="page-header">
    <h1>My Account</h1>
  </div>
    
  <table class="table">
    <tbody>
      <tr>
        <td>Name</td>
        <td><%= current_user.full_name %></td>
      </tr>
      <tr>
        <td>Phone Number</td>
        <td><%= current_user.phone_number %></td>
      </tr>
      <tr>
        <td>Website URL</td>
        <td><%= current_user.website_url %></td>
      </tr>
      <tr>
        <td>Address</td>
        <td>
          <%= current_user.address_line_1 %> <br>
          <%= current_user.address_line_2 %> <br>
          <%= current_user.city %>,
          <%= current_user.state %> <br>
          <%= current_user.country %>
          <%= current_user.zip_code %>
        </td>
      </tr>
    </tbody>
  </table>

</div>

